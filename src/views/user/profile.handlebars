<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Profile</h3>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Username:</strong>
                    </div>
                    <div class="col-sm-9">
                        {{user.username}}
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Email:</strong>
                    </div>
                    <div class="col-sm-9">
                        {{user.email}}
                    </div>
                </div>
                {{#if user.profileImageUrl}}
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Profile Image:</strong>
                    </div>
                    <div class="col-sm-9">
                        <img src="{{user.profileImageUrl}}" alt="Profile Image" class="img-thumbnail" style="max-width: 200px;">
                    </div>
                </div>
                {{/if}}
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Member Since:</strong>
                    </div>
                    <div class="col-sm-9">
                        {{formatDate user.createdAt}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 