<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">Welcome to SSO Server</h1>
            <p class="lead mb-4">A secure single sign-on solution for your applications</p>
            
            {{#if user}}
                <div class="mb-4">
                    <h2>Welcome back, {{user.username}}!</h2>
                    <p>Manage your profile and connected applications</p>
                    <a href="/profile" class="btn btn-primary btn-lg">Go to Profile</a>
                </div>
            {{else}}
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="d-grid gap-3">
                            <a href="/auth/login" class="btn btn-primary btn-lg">Login</a>
                            <a href="/auth/register" class="btn btn-outline-primary btn-lg">Register</a>
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div> 